<head>
    <link rel="stylesheet" href="~/css/index.css" />
</head>
<div class="row">
    <div class="col"></div>
    <div class="col-8">
        <div class="generator">
            <h3 class="text-center">Random Passcode (passcode #@ViewBag.Count)</h3>
            <div class="string_box pt-3 my-3">
                <p class="text-center">@ViewBag.Password</p>
            </div>
            <div class="row">
                <div class="col"></div>
                <div class="col text-center">
                    <a href="/">
                        <button class="btn btn-success">Generate</button>
                    </a>
                </div>
                <div class="col"></div>
            </div>
        </div>
    </div>
    <div class="col"></div>
</div>